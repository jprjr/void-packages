# Template file for 'libclc-git'
pkgname=libclc-git
version=20150408
revision=2
build_style=configure
hostmakedepends="git python llvm clang"
makedepends="clang llvm libffi-devel libedit-devel zlib-devel ncurses-devel"
short_desc="Open implementation of the OpenCL C programming language"
maintainer="John Galt <johngaltfirstrun@gmail.com>"
license="BSD/MIT"
homepage="http://libclc.llvm.org"
provides="libclc-${version}_${revision}"
replaces="libclc>=0"
noarch=yes

make_build_args+=" VERBOSE=1"

do_fetch() {
	local _githash="69ebc81135ee35aab0154a5eed057830f962ab00"
	local url="http://llvm.org/git/libclc.git"
	msg_normal "Fetching source from $url ...\n"
	git clone ${url} ${wrksrc}
	cd ${wrksrc}
	git checkout ${_githash}
}
do_configure() {
	./configure.py --prefix=/usr
}
